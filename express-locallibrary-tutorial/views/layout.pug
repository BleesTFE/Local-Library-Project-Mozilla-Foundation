    link(rel='stylesheet', href='/stylesheets/style.css')
    style.
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
      }
      .sidebar {
        background-color: #283593;
        color: #ffffff;
        height: 100vh;
        padding-top: 20px;
      }
      .sidebar-nav {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .sidebar-nav li {
        margin-bottom: 10px;
      }
      .sidebar-nav a {
        color: #ffffff;
        text-decoration: none;
        transition: color 0.5s ease;
      }
      .sidebar-nav a:hover {
        color: #ff4081;
      }
  body
